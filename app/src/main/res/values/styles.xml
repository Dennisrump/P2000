<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@mipmap/ic_launcher_round</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>-->
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorSecondary</item>
        <!--<item name="android:textColor">@color/colorTextLight</item>-->
        <!--<item name="android:textColorPrimary">@color/colorTextLight</item>-->
        <!--<item name="android:titleTextColor" tools:targetApi="m">@color/colorTextLight</item>-->
        <!--<item name="titleTextColor">@color/colorTextLight</item>-->
    </style>


    <style name="ToolbarTitleText" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="android:textAppearanceSmall">@style/MyAlertTextAppearance</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorBlue</item>
        <item name="textColorAlertDialogListItem">@color/colorText</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MyAlertDialogThemeRed" parent="MyAlertDialogTheme">
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyleRed</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyleRed</item>
    </style>

    <style name="MyAlertTextAppearance">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="AlertButtonStyleRed" parent="AlertButtonStyle">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="android:textAppearanceSmall">@style/MyAlertTextAppearance</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:colorAccent">@color/colorBlue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/colorBlue</item>
        <item name="textColorAlertDialogListItem">@color/colorBlue</item>
    </style>

    <style name="RippleBackgroundStyle">
        <item name="android:colorControlHighlight">@color/colorAccent22</item>
        <item name="colorControlHighlight">@color/colorAccent22</item>
    </style>

    <style name="SelectableItemBackgroundStyle">
        <item name="android:theme">@style/RippleBackgroundStyle</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
